      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
  %body
    .container-fluid
      .row-fluid
        .span4
        .span3.well
          = bootstrap_flash
          = yield
        .span4